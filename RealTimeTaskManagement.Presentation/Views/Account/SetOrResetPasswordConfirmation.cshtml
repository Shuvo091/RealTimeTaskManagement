@{
    var isReset = ViewBag.IsReset;
    var Title = "Password Confirmation";
    var Body = "Your password has been set";
    if (isReset)
    {
        Title = "Reset Password Confirmation";
        Body = " Your password has been changed";
    }

    ViewData["Title"] = Title;
}
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 border border-secondary p-5 mt-5">
            <h3 class="text-center">@Title</h3>
            <p class="text-center pt-1">
                @Body. Please <a asp-controller="Account" asp-action="Login">click here to log in</a>.
            </p>
        </div>
    </div>
</div>
