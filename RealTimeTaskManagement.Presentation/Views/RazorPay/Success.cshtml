@model RealTimeTaskManagement.Payment.RazorPay.PaymentDetails;
@{
    ViewData["Title"] = "Payment Success - Razor Pay";
}

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h2 class="alert-heading">Payment Successful!</h2>
        <p>Your payment has been processed successfully. Thank you for your purchase!</p>
        <hr>
        <p><strong>Payment ID:</strong> @Model.PaymentId</p>
        <p><strong>Order ID:</strong> @Model.OrderId</p>
        <p><strong>Signature:</strong> @Model.Signature</p>
        <hr>
        <a href="/" class="btn btn-primary">Go to Home</a>
    </div>
</div>
