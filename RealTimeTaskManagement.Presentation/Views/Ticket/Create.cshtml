@model RealTimeTaskManagement.Models.Dto.TicketDto

@{
    ViewData["Title"] = "Create New Task";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Priority" class="form-label">Priority</label>
        <select asp-for="Priority" class="form-select">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Assignee" class="form-label">Assignee</label>
        <input asp-for="Assignee" class="form-control" type="text" placeholder="Enter Assignee ID" />
        <span asp-validation-for="Assignee" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Reporter" class="form-label">Reporter</label>
        <input asp-for="Reporter" class="form-control" type="text" placeholder="Enter Reporter ID" />
        <span asp-validation-for="Reporter" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreatedOn" class="form-label">Created On</label>
        <input asp-for="CreatedOn" class="form-control" type="datetime-local" />
        <span asp-validation-for="CreatedOn" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Deadline" class="form-label">Deadline</label>
        <input asp-for="Deadline" class="form-control" type="datetime-local" />
        <span asp-validation-for="Deadline" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LoggedMinutes" class="form-label">Logged Minutes</label>
        <input asp-for="LoggedMinutes" class="form-control" type="number" step="1" min="0" />
        <span asp-validation-for="LoggedMinutes" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ParentTicketId" class="form-label">Parent Ticket ID</label>
        <input asp-for="ParentTicketId" class="form-control" type="number" />
        <span asp-validation-for="ParentTicketId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Task</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
